<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '8dp'
        spacing: '8dp'
        BoxLayout:
            size_hint_y: None
            height: '36dp'
            spacing: '8dp'
            Label:
                text: 'Connection:'
                size_hint_x: None
                width: '110dp'
            Label:
                text: ('Connected' if root.state.connected else 'Not connected') if root.state else 'Not connected'
                color: [0.2, 1, 0.2, 1] if root.state and root.state.connected else [1, 0.4, 0.4, 1]
        Label:
            text: 'Settings screen'

