                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [6,]
                    Label:
                        text: "[b]C Axis[/b]"
                        markup: True
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: 1
                    spacing: '12dp'
                    Widget:
                        size_hint_y: 1
                    Label:
                        size_hint_y: None
                        height: '60dp'
                        text: "Startpoint[3]\nvalue from\nDMC"
                        halign: 'center'
                        valign: 'middle'
                        on_size: self.text_size = self.size
                    VControl:
                        id: c_ctrl
