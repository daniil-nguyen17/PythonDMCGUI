                        down_cb: lambda: root.adjust_axis('C', -(step1.state=='down' and 1 or step10.state=='down' and 10 or 100))
                    Widget:
                        size_hint_y: 1
                    Label:
                        text: "Startpoint[3]"
                        size_hint_y: None
                        height: '24dp'

            VDivider:

            # D (horizontal â€“ rotation)
