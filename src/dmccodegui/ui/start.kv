# Class rules moved to theme.kv to avoid re-declaration warnings

<StartScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '2dp'
        spacing: '10dp'

        Label:
            size_hint_y: None
            height: '24dp'
            text: "[b]Start Point Set up for A B C D AXIS[/b]"
            markup: True

        BoxLayout:
            size_hint_y: None
            height: '48dp'
            spacing: '6dp'
            Label:
                text: 'Step'
                size_hint_x: None
                width: '70dp'
            ToggleButton:
                id: step1
                text: 'X1'
                group: 'step'
                state: 'down'
            ToggleButton:
                id: step10
                text: 'X10'
                group: 'step'
            ToggleButton:
                id: step100
                text: 'X100'
                group: 'step'
            Widget:
            Button:
                text: 'Load Start Array to Screen'
                size_hint_x: None
                width: '280dp'
                on_release: root.loadArrayToPage()
            Button:
                text: 'Save Start Points'
                size_hint_x: None
                width: '120dp'
                on_release: root.save_values()

        BoxLayout:
            spacing: '14dp'

            # A (horizontal)
            CardFrame:
                BoxLayout:
                    size_hint_y: None
                    height: '36dp'
                    padding: '6dp'
                    canvas.before:
                        Color:
                            rgba: .95, .95, .95, 0.18
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [6,]
                    Label:
                        text: "[b]A Axis[/b]"
                        markup: True
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: 1
                    spacing: '12dp'
                    Widget:
                        size_hint_y: 1
                    Label:
                        size_hint_y: None
                        height: '60dp'
                        text: "Startpoint[1]\nvalue from\nDMC"
                        halign: 'center'
                        valign: 'middle'
                        on_size: self.text_size = self.size
                    HControl:
                        id: a_ctrl
                        left_src:  'dmccodegui/assets/images/arrow-left-red.png'
                        right_src: 'dmccodegui/assets/images/arrow-right-green.png'
                        left_w:  '72dp'
                        right_w: '80dp'
                        left_cb:  lambda: root.adjust_axis('A', -(step1.state=='down' and 1 or step10.state=='down' and 10 or 100))
                        right_cb: lambda: root.adjust_axis('A',  (step1.state=='down' and 1 or step10.state=='down' and 10 or 100))
                    Widget:
                        size_hint_y: 1
                    Label:
                        text: "Startpoint[1]"
                        size_hint_y: None
                        height: '24dp'

            VDivider:

            # B (vertical)
            CardFrame:
                BoxLayout:
                    size_hint_y: None
                    height: '36dp'
                    padding: '6dp'
                    canvas.before:
                        Color:
                            rgba: .95, .95, .95, 0.18
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [6,]
                    Label:
                        text: "[b]B Axis[/b]"
                        markup: True
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: 1
                    spacing: '12dp'
                    Widget:
                        size_hint_y: 1
                    Label:
                        size_hint_y: None
                        height: '60dp'
                        text: "Startpoint[2]\nvalue from\nDMC"
                        halign: 'center'
                        valign: 'middle'
                        on_size: self.text_size = self.size
                    VControl:
                        id: b_ctrl
                        up_src:   'dmccodegui/assets/images/arrow-up-green.png'
                        down_src: 'dmccodegui/assets/images/arrow-down-red.png'
                        up_cb:   lambda: root.adjust_axis('B',  (step1.state=='down' and 1 or step10.state=='down' and 10 or 100))
                        down_cb: lambda: root.adjust_axis('B', -(step1.state=='down' and 1 or step10.state=='down' and 10 or 100))
                    Widget:
                        size_hint_y: 1
                    Label:
                        text: "Startpoint[2]"
                        size_hint_y: None
                        height: '24dp'

            VDivider:

            # C (vertical)
            CardFrame:
                BoxLayout:
                    size_hint_y: None
                    height: '36dp'
